{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "types": [
      "node",
      "react",
      "jest"
    ],
    "rootDir": "src",
    "outDir": "dist/lib",
    "stripInternal": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "declarationDir": "dist/@types",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.tsx?"
  ]
}